@model Customer

@{
    ViewData["Title"] = "SportsPro";
    Layout = "_Layout";
}
<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>
        SportsPro
    </title>
</head>
<body>
    <div class="container-fluid">
        <br /><h1 class="text-danger">@TempData["message"]</h1>
        <h2 class="mt-2">Get Customer</h2>
        <form asp-action="List" asp-controller="Registration" asp-route-id="@Model.CustomerId" method="get">
            <select asp-for="CustomerId" class="form-select" asp-items="@(new SelectList(ViewBag.Customers, "CustomerId", "FullName"))">
                <option value="0">Select a Customer...</option>
            </select>
            <button class="btn btn-primary mt-2" type="submit">Select</button>
        </form>
    </div>
    <br />
</body>
</html>