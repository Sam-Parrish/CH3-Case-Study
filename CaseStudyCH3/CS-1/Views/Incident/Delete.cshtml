    <div class="deleteStuff">
        <h2>Confirm Deletion</h2>
        <h3>Incident No. @Model.IncidentId</h3>

        <form asp-controller="Incident" asp-action="Delete" method="post">
            <input type="hidden" asp-for="IncidentId" /><br />

            <button type="submit" class="btn btn-primary">Delete</button>
            <a asp-controller="Incident" asp-action="Index" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
