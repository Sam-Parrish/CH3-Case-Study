@model Incident
@{
    string title = ViewBag.Action + "Incident";

    ViewData["Title"] = title;
    Layout = "_Layout";
}
<body>
    <br />
    <div class="editDiv container-fluid">
        <h2>@ViewBag.Title</h2>

        <form asp-action="Edit" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="mb-3">
                <label asp-for="CustomerId" class="form-label">Customer</label>
                <select asp-for="CustomerId" asp-items="@(new SelectList(ViewBag.Customers, "CustomerId", "FirstName", "LastName"))" class="form-select">
                    <option value="">Select a customer...</option>
                </select>
            </div>
            <div class="mb-3">
                <label asp-for="ProductId" class="form-label">Product</label>
                <select asp-for="ProductId" asp-items="@(new SelectList(ViewBag.Products, "ProductId", "Name"))" class="form-select">
                    <option value="">Select a product...</option>
                </select>
            </div>
            <div class="mb-3">
                <label asp-for="Title" class="form-label">Title</label><br />
                <input asp-for="Title" class="form-control" />
            </div>
            <div class="mb-3">
                <label asp-for="Description" class="form-label">Description</label><br />
                <input asp-for="Description" class="form-control" />
            </div>
            <div class="mb-3">
                <label asp-for="TechnicianId" class="form-label">Technician</label>
                <select asp-for="TechnicianId" asp-items="@(new SelectList(ViewBag.Technicians, "TechnicianId", "Name"))" class="form-select">
                    <option value="">Select a technician...</option>
                </select>
            </div>
            <div class="mb-3">
                <label asp-for="DateOpened" class="form-label">Date Opened</label><br />
                <input asp-for="DateOpened" class="form-control" />
            </div>
            <div class="mb-3">
                <label asp-for="DateClosed" class="form-label">Date Closed</label><br />
                <input asp-for="DateClosed" class="form-control" />
            </div>

            <input type="hidden" asp-for="CustomerId" />

            <button type="submit" class="btn btn-primary">Save</button>
            <a asp-controller="Incident" asp-action="List" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</body>
