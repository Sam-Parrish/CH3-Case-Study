@model Incident
@{
	string title = ViewBag.Action + "Incident";

	ViewData["Title"] = title;
	Layout = "_Layout";
}
<body>
	<div class="navBarDiv container-fluid">
		<nav class="navbar navbar-expand-lg bg-body-tertiary">
			<div class="container-fluid">
				<h2>SportsPro</h2>
				<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>
				<div class="collapse navbar-collapse" id="navbarSupportedContent">
					<ul class="navbar-nav me-auto mb-2 mb-lg-0">
						<li class="nav-item">
							<a class="nav-link  link-light fw-bold active" aria-current="page" href="/Home/">Home</a>
						</li>
						<li class="nav-item">
							<a class="nav-link link-light fw-bold active" aria-current="page" href="/Product/">Products</a>
						</li>
						<li class="nav-item">
							<a class="nav-link link-light fw-bold active" aria-current="page" href="/Technician/">Technicians</a>
						</li>
						<li class="nav-item">
							<a class="nav-link link-light fw-bold active" aria-current="page" href="/Customer/">Customers</a>
						</li>
						<li class="nav-item">
							<a class="nav-link link-light fw-bold active" aria-current="page" href="/Incident/">Incidents</a>
						</li>
						<li class="nav-item">
							<a class="nav-link link-light fw-bold active" aria-current="page" href="/Registration/">Registrations</a>
						</li>
					</ul>
					<div class="aboutPage float-right">
						<ul class="navbar-nav me-auto mb-2 mb-lg-0">
							<li class="nav-item">
								<a class="nav-link link-light fw-bold active" aria-current="page" href="/About/">About</a>
							</li>
						</ul>
					</div>
				</div>
			</div>
		</nav>
	</div>
	<div class="editDiv container-fluid">
		<h2>@ViewBag.Title</h2>

		<form asp-action="Edit" method="post">
			<div asp-validation-summary="All" class="text-danger"></div>
			<div class="mb-3">
				<label asp-for="CustomerId" class="form-label">Customer</label>
				<select asp-for="CustomerId" class="form-select">
					<option value="">Select a Customer</option>
					@foreach (Customer c in ViewBag.Customers)
					{
						<option value="@c.CustomerId">@c.FirstName @c.LastName</option>
					}
				</select>
			</div>
			<div class="mb-3">
				<label asp-for="ProductId" class="form-label">Product</label>
				<select asp-for="ProductId" class="form-select">
					<option value="">Select a Product</option>
					@foreach (Product p in ViewBag.Products)
					{
						<option value="@p.ProductId">@p.Name</option>
					}
				</select>
			</div>
			<div class="mb-3">
				<label asp-for="Title" class="form-label">Title</label><br />
				<input asp-for="Title" class="form-control" />
			</div>
			<div class="mb-3">
				<label asp-for="Description" class="form-label">Description</label><br />
				<input asp-for="Description" class="form-control" />
			</div>
			<div class="mb-3">
				<label asp-for="TechnicianId" class="form-label">Technician</label>
				<select asp-for="TechnicianId" class="form-select">
					<option value="">Select a Technician</option>
					@foreach (Technician t in ViewBag.Technicians)
					{
						<option value="@t.TechnicianId">@t.Name</option>
					}
				</select>
			</div>
			<div class="mb-3">
				<label asp-for="DateOpened" class="form-label">Date Opened</label><br />
				<input asp-for="DateOpened" class="form-control" />
			</div>
						<div class="mb-3">
				<label asp-for="DateClosed" class="form-label">Date Closed</label><br />
				<input asp-for="DateClosed" class="form-control" />
			</div>

			<input type="hidden" asp-for="CustomerId" />

			<button type="submit" class="btn btn-primary">Save</button>
			<a asp-controller="Incident" asp-action="Index" class="btn btn-secondary">Cancel</a>
		</form>
	</div>
</body>
<br />
<footer>&copy;2022 - SportsPro</footer>
