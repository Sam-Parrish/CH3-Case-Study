@model Product


@{
    ViewData["Title"] = "Delete a Product";

    Layout = "_Layout";
}
<body>
    <br />
    <div class="deleteStuff">
        <h2>Confirm Deletion</h2>
        <h3>@Model.Name (@Model.ProductCode)</h3>

        <form asp-controller="Product" asp-action="Delete" method="post">
            <input type="hidden" asp-for="ProductId" /><br />

            <button type="submit" class="btn btn-primary">Delete</button>
            <a asp-controller="Product" asp-action="List" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</body>