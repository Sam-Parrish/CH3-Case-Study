@model Product
@{
    string title = ViewBag.Action + "Product";

    ViewData["Title"] = title;
    Layout = "_Layout";
}
<body>
    <br/>
    <div class="editDiv container-fluid">
        <h2>@ViewBag.Title</h2>

        <form asp-action="Edit" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="mb-3">
                <label asp-for="ProductCode" class="form-label">Product Code</label><br />
                <input asp-for="ProductCode" class="form-control" />
            </div>
            <div class="mb-3">
                <label asp-for="Name" class="form-label">Name</label><br />
                <input asp-for="Name" class="form-control" />
            </div>
            <div class="mb-3">
                <label asp-for="Price" class="form-label">Price</label><br />
                <input asp-for="Price" class="form-control" />
            </div>

            <input type="hidden" asp-for="ProductId" />

            <button type="submit" class="btn btn-primary">Save</button>
            <a asp-controller="Product" asp-action="Index" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</body>
