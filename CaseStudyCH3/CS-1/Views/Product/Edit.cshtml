@model Product
@{
    string title = ViewBag.Action + "Product";

    ViewData["Title"] = title;
    Layout = "_Layout";
}
<body>
    <div class="navBarDiv container-fluid">
        <nav class="navbar navbar-expand-lg bg-body-tertiary">
            <div class="container-fluid">
                <h2>SportsPro</h2>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link  link-light fw-bold active" aria-current="page" href="/Home/">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link link-light fw-bold active" aria-current="page" href="/Product/">Products</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link link-light fw-bold active" aria-current="page" href="/Technician/">Technicians</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link link-light fw-bold active" aria-current="page" href="/Customer/">Customers</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link link-light fw-bold active" aria-current="page" href="/Incident/">Incidents</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link link-light fw-bold active" aria-current="page" href="/Registration/">Registrations</a>
                        </li>
                    </ul>
                    <div class="aboutPage float-right">
                        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                            <li class="nav-item">
                                <a class="nav-link link-light fw-bold active" aria-current="page" href="/About/">About</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </nav>
    </div>
    <div class="editDiv container-fluid">
        <h2>@ViewBag.Title</h2>

        <form asp-action="Edit" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="mb-3">
                <label asp-for="ProductCode" class="form-label">Product Code</label><br />
                <input asp-for="ProductCode" class="form-control" />
            </div>
            <div class="mb-3">
                <label asp-for="Name" class="form-label">Name</label><br />
                <input asp-for="Name" class="form-control" />
            </div>
            <div class="mb-3">
                <label asp-for="Price" class="form-label">Price</label><br />
                <input asp-for="Price" class="form-control" />
            </div>

            <input type="hidden" asp-for="ProductId" />

            <button type="submit" class="btn btn-primary">Save</button>
            <a asp-controller="Product" asp-action="Index" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</body>
<br/>
<footer>&copy;2022 - SportsPro</footer>
