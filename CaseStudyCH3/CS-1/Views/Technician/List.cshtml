@model List<Technician>

@{
    ViewData["Title"] = "SportsPro";
    Layout = "_Layout";
}
<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>
        SportsPro
    </title>
</head>
<body>
    <br/>
    <h2 class="mb-3">Technician Manager</h2>
        <div class="row">
        <h6>Sort By:</h6>
        <div class="col-md-auto"><a asp-action="List" asp-route-id="1" class="btn btn-outline-primary @(ViewBag.TechSort == "A" ? "btn btn-outline-primary active" : "btn btn-outline-primary")">A-Z</a></div>
        <div class="col-md-auto mb-3"><a asp-action="List" asp-route-id="2" class="btn btn-outline-primary @(ViewBag.TechSort == "Z" ? "btn btn-outline-primary active" : "btn btn-outline-primary")">Z-A</a></div>
    </div>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Phone</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var technician in Model)
            {
                <tr>
                    <td>@technician.Name</td>
                    <td>@technician.Email</td>
                    <td>@technician.PhoneNumber</td>
                    <td>
                        <a asp-controller="Technician" asp-action="Edit" asp-route-id="@technician.TechnicianId" class="btn btn-primary">Edit</a>
                        <a asp-controller="Technician" asp-action="Delete" asp-route-id="@technician.TechnicianId" class="btn btn-primary">Delete</a>
                </tr>
            }
        </tbody>
    </table>
    <div class="mb-2">
        <a asp-controller="Technician" asp-action="Add" class="fw-bold fs-5 ms-2 btn btn-primary">Add Technician</a>
    </div>
    <br />
</body>
</html>