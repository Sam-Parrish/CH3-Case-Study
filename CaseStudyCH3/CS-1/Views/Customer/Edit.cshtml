@model Customer
@{
	string title = ViewBag.Action + "Customer";

	ViewData["Title"] = title;
	Layout = "_Layout";
}
<body>
	<br/>
	<div class="editDiv container-fluid">
		<h2>@ViewBag.Title</h2>

		<form asp-action="Edit" method="post">
			<div asp-validation-summary="All" class="text-danger"></div>
			<div class="mb-3">
				<label asp-for="FirstName" class="form-label">First Name</label><br />
				<input asp-for="FirstName" class="form-control" />
			</div>
			<div class="mb-3">
				<label asp-for="LastName" class="form-label">Last Name</label><br />
				<input asp-for="LastName" class="form-control" />
			</div>
			<div class="mb-3">
				<label asp-for="Address" class="form-label">Address</label><br />
				<input asp-for="Address" class="form-control" />
			</div>
			<div class="mb-3">
				<label asp-for="City" class="form-label">City</label><br />
				<input asp-for="City" class="form-control" />
			</div>

			<div class="mb-3">
				<label asp-for="State" class="form-label">State</label><br />
				<input asp-for="State" class="form-control" />
			</div>
			<div class="mb-3">
				<label asp-for="CountryId" class="form-label">Country</label>
				<select asp-for="CountryId" class="form-select">
					<option value="">Select a Country</option>
					@foreach (Country c in ViewBag.Countries)
					{
						<option value="@c.CountryId">@c.Name</option>
					}
				</select>
			</div>
			<div class="mb-3">
				<label asp-for="PostalCode" class="form-label">PostalCode</label><br />
				<input asp-for="PostalCode" class="form-control" />
			</div>
			<div class="mb-3">
				<label asp-for="Email" class="form-label">Email</label><br />
				<input asp-for="Email" class="form-control" />
			</div>
			<div class="mb-3">
				<label asp-for="Phone" class="form-label">Phone</label><br />
				<input asp-for="Phone" class="form-control" />
			</div>

			<input type="hidden" asp-for="CustomerId" />

			<button type="submit" class="btn btn-primary">Save</button>
			<a asp-controller="Customer" asp-action="Index" class="btn btn-secondary">Cancel</a>
		</form>
	</div>
</body>
