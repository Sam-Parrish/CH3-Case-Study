@model Customer
@{
    string title = ViewBag.Action + "Customer";

    ViewData["Title"] = title;
    Layout = "_Layout";
}
<body>
    <br />
    <div class="editDiv container-fluid">
        <h2>@ViewBag.Title</h2>

        <form asp-action="Edit" method="post">
            <div class="row mb-3">
                <label asp-for="FirstName" class="firstName" id="form-label col-md-2">First Name</label><br />
                <input asp-for="FirstName" class="form-control col-md-4" type="text"/>
                <div class="col">
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label asp-for="LastName" class="form-label col-md-2">Last Name</label><br />
                <input asp-for="LastName" class="form-control col-md-4" />
                <div class="col">
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label asp-for="Address" class="form-label col-md-2">Address</label><br />
                <input asp-for="Address" class="form-control col-md-4" />
                <div class="col">
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label asp-for="City" class="form-label col-md-2">City</label><br />
                <input asp-for="City" class="form-control col-md-4" />
                <div class="col">
                    <span asp-validation-for="City" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label asp-for="State" class="form-label col-md-2">State</label><br />
                <input asp-for="State" class="form-control col-md-4" />
                <div class="col">
                    <span asp-validation-for="State" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label asp-for="CountryId" class="form-label col-md-2">Country</label>
                <select asp-for="CountryId" asp-items="@(new SelectList(ViewBag.Countries, "CountryId", "Name"))" class="form-select col-md-4">
                    <option value="0">Select a country...</option>
                </select>
                <div class="col">
                    <span asp-validation-for="CountryId" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label asp-for="PostalCode" class="form-label col-md-2">PostalCode</label><br />
                <input asp-for="PostalCode" class="form-control col-md-4" type="text"/>
                <div class="col">
                    <span asp-validation-for="PostalCode" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label asp-for="Email" class="form-label col-md-2">Email</label><br />
                <input asp-for="Email" class="form-control col-md-4" />
                <div class="col">
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label asp-for="Phone" class="form-label col-md-2">Phone</label><br />
                <input asp-for="Phone" class="form-control col-md-4" />
                <div class="col">
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>
            </div>

            <input type="hidden" asp-for="CustomerId" />

            <button type="submit" class="btn btn-primary">Save</button>
            <a asp-controller="Customer" asp-action="List" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</body>