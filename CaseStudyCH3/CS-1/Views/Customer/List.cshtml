@model List<Customer>

@{
    ViewData["Title"] = "SportsPro";
    Layout = "_Layout";
}
<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>
        SportsPro
    </title>
</head>
<body>
    <br />
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>City</th>
                <th>Country</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var customer in Model)
            {
                <tr>
                    <td>@customer.FirstName @customer.LastName</td>
                    <td>@customer.Email</td>
                    <td>@customer.City</td>
                    <td>@customer.Country.Name</td>
                    <td>
                        <a asp-controller="Customer" asp-action="Edit" asp-route-id="@customer.CustomerId" class="btn btn-primary">Edit</a>
                        <a asp-controller="Customer" asp-action="Delete" asp-route-id="@customer.CustomerId" class="btn btn-primary">Delete</a>
                </tr>
            }
        </tbody>
    </table>
    <div class="mb-2">
        <a asp-controller="Customer" asp-action="Add" class="fw-bold fs-5 ms-2 btn btn-primary">Add Customer</a>
    </div>
    <br />
</body>
</html>