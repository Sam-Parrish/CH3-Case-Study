@model TechIncidentViewModel
@{
    string title = ViewBag.Action + "Technician";

    ViewData["Title"] = title;
    Layout = "_Layout";
}
<body>
    <br />
    <div class="editDiv container-fluid">
        <h2>@ViewBag.Title</h2>

        <form asp-action="Edit" method="post">
            <div class="row mb-3">
                <label class="col-form-label col-md-3">Technician:</label>
                <div class="col">
                    <label>@Model.Technician.Name</label>
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-form-label col-md-3">Customer:</label>
                <div class="col">
                    <label>@Model.Incident.Customer.FirstName</label>
                    <label>@Model.Incident.Customer.LastName</label>
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-form-label col-md-3">Product:</label>
                <div class="col">
                    <label>@Model.Incident.Product.Name</label>
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-form-label col-md-3">Title:</label>
                <div class="col">
                    <label>@Model.Incident.Title</label>
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-form-label col-md-3">Date Opened:</label>
                <div class="col">
                    <label>@Model.Incident.DateOpened</label>
                </div>
            </div>
            <div class="row mb-3">
                <label asp-for="Incident.Description" class="col-form-label col-md-3">Description:</label>
                <div class="col">
                    <textarea asp-for="Incident.Description" class="form-control"></textarea>
                </div>
            </div>
            <div class="row mb-3">
                <label asp-for="Incident.DateClosed" class="col-form-label col-md-3">Date Closed:</label>
                <div class="col">
                    <input type="text" asp-for="Incident.DateClosed" class="form-control" />
                </div>
            </div>

            <input type="hidden" asp-for="Incident.IncidentId" />

            <button type="submit" class="btn btn-primary">Save</button>
            <a asp-action="List" asp-route-id="@Model.Technician.TechnicianId" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</body>
